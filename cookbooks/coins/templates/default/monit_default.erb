check process <%= @procname %> with pidfile <%= @node[:walletserver][:root] %>/run/<%= @procname %>.pid
   start program = "<%= @node[:walletserver][:root] %>/control/start-<%= @procname %>.sh"
	as uid <%= @coinuser %> and gid <%= @coingroup %>
   stop program = "<%= @node[:walletserver][:root] %>/control/stop-<%= @procname %>.sh"
	as uid root
   if failed host <%= @rpchost %> port <%= @rpcport %> for 10 cycles then restart
   if 5 restarts within 50 cycles then timeout
group coins
